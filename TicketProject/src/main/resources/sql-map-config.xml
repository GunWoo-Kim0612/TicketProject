	 -->

	<!-- 이 데이터베이스에서 사용할 쿼리문을 맵핑해줘야함    쿼리문이작성된 xml파일을 맵핑 -->

	<mappers>
		<mapper resource="mappings/show-mapping.xml"/>
		<mapper resource="mappings/review-mapping.xml"/>
		<mapper resource="mappings/member-mapping.xml"/>
		<mapper resource="mappings/reserve-mapping.xml"/>
		<mapper resource="mappings/mypick-mapping.xml"/>
	</mappers>
</configuration>

