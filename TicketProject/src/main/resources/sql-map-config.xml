<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="callSettersOnNulls" value="true"/>
	</settings>
	<!-- 설정되어있음으로 안씀..  -->
	<!-- <properties resource="database.properties"></properties> -->

	<!-- alias설정 -->
	<typeAliases>
		<typeAlias type="com.gunwoo.myapp.biz.show.ShowVO" alias="show"/>  <!-- type : 해당패키지, alias : 별칭 board -->
		<typeAlias type="com.gunwoo.myapp.biz.review.ReviewVO" alias="review"/>
		<typeAlias type="com.gunwoo.myapp.biz.member.MemberVO" alias="member"/>
		<typeAlias type="com.gunwoo.myapp.biz.mypick.MypickVO" alias="mypick"/>
		<typeAlias type="com.gunwoo.myapp.biz.reserve.ReserveVO" alias="reserve"/>
	</typeAliases>

	<!-- JDBC -->

	<!-- DB관련 코드가 이미 applicationContext.xml을 통해 되어있으므로 필요x -->
